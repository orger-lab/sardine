<Window x:Class="Sardine.Core.Views.WPF.ExitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sardine.Core.Views.WPF"
        mc:Ignorable="d"
        Width="400" Height="150" Background="Black" d:BorderBrush="OrangeRed" BorderBrush="{Binding Source={x:Static local:SardineApplicationSettings.BorderBrushColor}}" BorderThickness="5" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" 
        d:DataContext="{d:DesignInstance Type=local:ExitWindow, IsDesignTimeCreatable=False}"
        WindowStyle = "None">
    <Grid>
        <Label Content="Exiting.. Please wait" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
    </Grid>
</Window>
